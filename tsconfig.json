{
    "compilerOptions": {
        "target": "ES2016",
        "module": "commonjs",
        "resolveJsonModule": true,
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
}
